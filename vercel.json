{
  "builds": [
    {
      "src": "metrics_api/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.11" }
    }
  ],
  "routes": [
    {
      "src": "/metrics",
      "dest": "/metrics_api/wsgi.py"
    },
    {
      "src": "/metrics/(.*)",
      "dest": "/metrics_api/wsgi.py"
    }
  ]
}